<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.ToList()[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.ToList()[0].Department)
            </th>
            <th>

    <tbody>
        @foreach (var item in Model.Jobs.ToList()) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpirationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-jobId="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-jobId="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-jobId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

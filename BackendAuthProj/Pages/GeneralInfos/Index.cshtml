@page
@model BackendAuthProj.Pages.GeneralInfos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@if (Model.Message != null)
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

<p>
    <a asp-page="Create" class="btn btn-primary">Create New General Info</a>
</p>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Infos[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Infos[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Infos[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Infos.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-infoId="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-infoId="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-infoId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

